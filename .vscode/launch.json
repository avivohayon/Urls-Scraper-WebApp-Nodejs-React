    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/backend/server.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "NODE_ENV": "development",
                "PORT": "8008" // You can adjust this if needed
            },
            "console": "integratedTerminal"
        }
    ]
}
